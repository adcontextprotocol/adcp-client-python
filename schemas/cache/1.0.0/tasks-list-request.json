{
  "$id": "/schemas/v1/core/tasks-list-request.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Request parameters for listing and filtering async tasks across all AdCP domains with state reconciliation capabilities",
  "examples": [
    {
      "data": {
        "filters": {
          "statuses": [
            "submitted",
            "working",
            "input-required"
          ]
        }
      },
      "description": "List all pending tasks across domains"
    },
    {
      "data": {
        "filters": {
          "domain": "media-buy",
          "statuses": [
            "input-required",
            "failed"
          ]
        },
        "sort": {
          "direction": "asc",
          "field": "updated_at"
        }
      },
      "description": "Find media-buy tasks requiring attention"
    },
    {
      "data": {
        "filters": {
          "created_after": "2025-01-01T00:00:00Z",
          "domain": "signals"
        },
        "pagination": {
          "limit": 20
        }
      },
      "description": "Recent signal operations"
    },
    {
      "data": {
        "filters": {
          "context_contains": "nike_q1_2025"
        },
        "include_history": true
      },
      "description": "State reconciliation for specific campaign"
    }
  ],
  "properties": {
    "context": {
      "additionalProperties": true,
      "description": "Initiator-provided context included in the request payload. Agents must echo this value back unchanged in responses and webhooks. Use for UI/session hints, correlation tokens, or tracking metadata.",
      "type": "object"
    },
    "filters": {
      "additionalProperties": false,
      "description": "Filter criteria for querying tasks",
      "properties": {
        "context_contains": {
          "description": "Filter tasks where context contains this text (searches buyer_ref, media_buy_id, signal_id, etc.)",
          "type": "string"
        },
        "created_after": {
          "description": "Filter tasks created after this date (ISO 8601)",
          "format": "date-time",
          "type": "string"
        },
        "created_before": {
          "description": "Filter tasks created before this date (ISO 8601)",
          "format": "date-time",
          "type": "string"
        },
        "domain": {
          "$ref": "/schemas/v1/enums/adcp-domain.json",
          "description": "Filter by single AdCP domain"
        },
        "domains": {
          "description": "Filter by multiple AdCP domains",
          "items": {
            "$ref": "/schemas/v1/enums/adcp-domain.json"
          },
          "type": "array"
        },
        "has_webhook": {
          "description": "Filter tasks that have webhook configuration when true",
          "type": "boolean"
        },
        "status": {
          "$ref": "/schemas/v1/enums/task-status.json",
          "description": "Filter by single task status"
        },
        "statuses": {
          "description": "Filter by multiple task statuses",
          "items": {
            "$ref": "/schemas/v1/enums/task-status.json"
          },
          "type": "array"
        },
        "task_ids": {
          "description": "Filter by specific task IDs",
          "items": {
            "type": "string"
          },
          "maxItems": 100,
          "type": "array"
        },
        "task_type": {
          "$ref": "/schemas/v1/enums/task-type.json",
          "description": "Filter by single task type"
        },
        "task_types": {
          "description": "Filter by multiple task types",
          "items": {
            "$ref": "/schemas/v1/enums/task-type.json"
          },
          "type": "array"
        },
        "updated_after": {
          "description": "Filter tasks last updated after this date (ISO 8601)",
          "format": "date-time",
          "type": "string"
        },
        "updated_before": {
          "description": "Filter tasks last updated before this date (ISO 8601)",
          "format": "date-time",
          "type": "string"
        }
      },
      "type": "object"
    },
    "include_history": {
      "default": false,
      "description": "Include full conversation history for each task (may significantly increase response size)",
      "type": "boolean"
    },
    "pagination": {
      "additionalProperties": false,
      "description": "Pagination parameters",
      "properties": {
        "limit": {
          "default": 50,
          "description": "Maximum number of tasks to return",
          "maximum": 100,
          "minimum": 1,
          "type": "integer"
        },
        "offset": {
          "default": 0,
          "description": "Number of tasks to skip",
          "minimum": 0,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "sort": {
      "additionalProperties": false,
      "description": "Sorting parameters",
      "properties": {
        "direction": {
          "$ref": "/schemas/v1/enums/sort-direction.json",
          "default": "desc",
          "description": "Sort direction"
        },
        "field": {
          "default": "created_at",
          "description": "Field to sort by",
          "enum": [
            "created_at",
            "updated_at",
            "status",
            "task_type",
            "domain"
          ],
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "title": "Tasks List Request",
  "type": "object"
}