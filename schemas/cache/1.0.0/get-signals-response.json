{
  "$id": "/schemas/signals/get-signals-response.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Response payload for get_signals task",
  "properties": {
    "context": {
      "additionalProperties": true,
      "description": "Initiator-provided context echoed inside the task payload. Opaque metadata such as UI/session hints, correlation tokens, or tracking identifiers.",
      "type": "object"
    },
    "errors": {
      "description": "Task-specific errors and warnings (e.g., signal discovery or pricing issues)",
      "items": {
        "$ref": "/schemas/core/error.json"
      },
      "type": "array"
    },
    "signals": {
      "description": "Array of matching signals",
      "items": {
        "additionalProperties": false,
        "properties": {
          "coverage_percentage": {
            "description": "Percentage of audience coverage",
            "maximum": 100,
            "minimum": 0,
            "type": "number"
          },
          "data_provider": {
            "description": "Name of the data provider",
            "type": "string"
          },
          "deployments": {
            "description": "Array of deployment targets",
            "items": {
              "$ref": "/schemas/core/deployment.json"
            },
            "type": "array"
          },
          "description": {
            "description": "Detailed signal description",
            "type": "string"
          },
          "name": {
            "description": "Human-readable signal name",
            "type": "string"
          },
          "pricing": {
            "additionalProperties": false,
            "description": "Pricing information",
            "properties": {
              "cpm": {
                "description": "Cost per thousand impressions",
                "minimum": 0,
                "type": "number"
              },
              "currency": {
                "description": "Currency code",
                "pattern": "^[A-Z]{3}$",
                "type": "string"
              }
            },
            "required": [
              "cpm",
              "currency"
            ],
            "type": "object"
          },
          "signal_agent_segment_id": {
            "description": "Unique identifier for the signal",
            "type": "string"
          },
          "signal_type": {
            "$ref": "/schemas/enums/signal-catalog-type.json",
            "description": "Type of signal"
          }
        },
        "required": [
          "signal_agent_segment_id",
          "name",
          "description",
          "signal_type",
          "data_provider",
          "coverage_percentage",
          "deployments",
          "pricing"
        ],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": [
    "signals"
  ],
  "title": "Get Signals Response",
  "type": "object"
}